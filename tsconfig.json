
{
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": true,
    "target": "esnext",
    "module": "esnext",
    "allowJs": false,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "removeComments": false,
    "moduleResolution": "node",
    "declaration": true,
    "jsx": "preserve",
    "lib": [
      "esnext"
    ],
    "rootDir": ".",
    "paths": {
      "@hjtvuese/parser": ["packages/parser/lib"],
      "@hjtvuese/markdown-render": ["packages/markdown-render/lib"]
    }
  },
  "include": [
    "packages/declarations.d.ts",
    "packages/**/index.d.ts",
    "packages/*/lib",
    "packages/*/__test__"
  ]
}
